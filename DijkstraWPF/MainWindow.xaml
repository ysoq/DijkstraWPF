<Window
    x:Class="DijkstraWPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DijkstraWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="地图导航 - Dijkstra算法"
    Width="900"
    Height="600"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  控制面板  -->
        <StackPanel
            Grid.Row="0"
            Margin="10"
            Orientation="Horizontal">
            <Button
                x:Name="btnClear"
                Width="60"
                Margin="0,0,10,0"
                Click="btnClear_Click"
                Content="清除" />
            <Button
                x:Name="btnReset"
                Width="60"
                Click="btnReset_Click"
                Content="重置" />
            <Button
                x:Name="btnTemp"
                Width="60"
                Margin="20,0,0,0"
                Click="btnTemp_Click"
                Content="绘制临时点位" />
            <Button
                Width="60"
                Margin="20,0,0,0"
                Click="btnSort_Click"
                Content="获取最短路线" />
            <TextBlock
                x:Name="txtStatus"
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                FontWeight="Bold" />
        </StackPanel>

        <!--  画布  -->
        <Canvas
            x:Name="canvas"
            Grid.Row="1"
            Background="LightGray"
            MouseLeftButtonDown="canvas_MouseLeftButtonDown">
            <Canvas.Resources>
                <!--  样式定义  -->
                <Style x:Key="RoadLine" TargetType="Line">
                    <Setter Property="Stroke" Value="DarkGray" />
                    <Setter Property="StrokeThickness" Value="3" />
                </Style>
                <Style x:Key="PathLine" TargetType="Line">
                    <Setter Property="Stroke" Value="Red" />
                    <Setter Property="StrokeThickness" Value="4" />
                    <Setter Property="StrokeDashArray" Value="5,2" />
                </Style>
                <Style x:Key="PointStyle" TargetType="Ellipse">
                    <Setter Property="Width" Value="8" />
                    <Setter Property="Height" Value="8" />
                    <Setter Property="Fill" Value="Blue" />
                </Style>
                <Style
                    x:Key="StartPointStyle"
                    BasedOn="{StaticResource PointStyle}"
                    TargetType="Ellipse">
                    <Setter Property="Fill" Value="Green" />
                    <Setter Property="Width" Value="12" />
                    <Setter Property="Height" Value="12" />
                </Style>
                <Style
                    x:Key="EndPointStyle"
                    BasedOn="{StaticResource PointStyle}"
                    TargetType="Ellipse">
                    <Setter Property="Fill" Value="Red" />
                    <Setter Property="Width" Value="12" />
                    <Setter Property="Height" Value="12" />
                </Style>
                <Style
                    x:Key="ConnectionPointStyle"
                    BasedOn="{StaticResource PointStyle}"
                    TargetType="Ellipse">
                    <Setter Property="Fill" Value="Orange" />
                </Style>
            </Canvas.Resources>
        </Canvas>
    </Grid>
</Window>
